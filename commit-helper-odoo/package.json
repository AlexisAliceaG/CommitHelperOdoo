{
  "name": "commit-helper-odoo",
  "displayName": "Commit Helper Odoo",
  "description": "It is an extension for Visual Studio Code that helps to make it easier to commit with the Odoo standard.",
  "version": "0.0.1",
  "author": "AlexisAliceaG",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:commit-helper.createCommit"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-helper.createCommit",
        "title": "Commit Odoo"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
